<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="25,0"
            VerticalOptions="Center">

            <Image
                Source="quiztime.jpg"
                SemanticProperties.Description="Quiz!"
                WidthRequest="400"
                HorizontalOptions="Center" />

            <Label
                Text="Bienvenu dans votre jeu de Quiz Anime."
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                WidthRequest="340"
                TextColor="DarkViolet"
                FontAttributes="Bold"
                FontFamily=""
                HorizontalOptions="Center" />

            <Label
                Text="Il s'agit d'un quiz où vous allez devoir trouver le nom du personnage."
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                WidthRequest="340"
                FontFamily=""
                HorizontalOptions="Center" />

            <Button
                Text="Démarrer le quiz"
                Clicked="StartBtn"
                WidthRequest="340"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
